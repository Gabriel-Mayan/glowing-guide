{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es2019"],
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./build",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["*"],
      "@main/*": ["./src/main/*"],
      "@shared/*": ["./src/shared/*"],  
      "@modules/*": ["./src/modules/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
